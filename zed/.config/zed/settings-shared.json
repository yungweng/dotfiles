//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent_ui_font_size": 19.0,
  "unnecessary_code_fade": 0.5,
  "ui_font_weight": 510.0,
  "ui_font_family": ".ZedSans",
  "agent": {
    "use_modifier_to_send": true,
    "play_sound_when_agent_done": true,
    "model_parameters": []
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "git_panel": {
    "dock": "left"
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "terminal": {
    "dock": "bottom"
  },
  "icon_theme": "Catppuccin Latte",
  "ui_font_size": 18.0,
  "buffer_font_size": 18.0,
  "buffer_font_weight": 500.0,
  "buffer_line_height": "comfortable",
  "theme": {
    "mode": "system",
    "light": "macOS Classic Dark",
    "dark": "One Dark"
  },
  "tab_size": 2, // Number of spaces per tab
  "preferred_line_length": 80, // Column for soft wrap and rulers
  "show_wrap_guides": true, // Show vertical ruler
  "soft_wrap": "editor_width", // Wrap options: "none", "editor_width", "preferred_line_length"
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "format_on_save": "on", // Options: "on", "off"
  "autosave": "on_focus_change", // Options: "off", "on_focus_change", "on_window_change"
  // Code intelligence
  "enable_language_server": true,
  "formatter": "language_server", // Alternative: custom external formatter
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "use_autoclose": true, // Auto-close brackets and quotes
  // Visual indicators
  "current_line_highlight": "all", // Options: "all", "line", "gutter", "none"
  "show_whitespaces": "selection", // Options: "all", "selection", "none", "boundary"
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware" // Rainbow indentation
  },
  "base_keymap": "JetBrains",
  "vim_mode": true
}
