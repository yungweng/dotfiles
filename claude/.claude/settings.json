{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 30,
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "SHELL": "fish",
    "MAX_MCP_OUTPUT_TOKENS": "100000",
    "CLAUDE_CODE_MAX_READ_LINES": "50000",
    "CLAUDE_CODE_MAX_OUTPUT_CHARS": "100000"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cd:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(date:*)",
      "Bash(uname:*)",
      "Bash(whoami:*)",
      "Bash(hostname:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(diff:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(cut:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(touch:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(ln:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(xargs:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(tsc:*)",
      "Bash(tsx:*)",
      "Bash(prettier:*)",
      "Bash(go:*)",
      "Bash(gofmt:*)",
      "Bash(golangci-lint:*)",
      "Bash(gosec:*)",
      "Bash(python3:*)",
      "Bash(pip:*)",
      "Bash(pip3:*)",
      "Bash(pytest:*)",
      "Bash(flake8:*)",
      "Bash(black:*)",
      "Bash(isort:*)",
      "Bash(mypy:*)",
      "Bash(cargo:*)",
      "Bash(rustc:*)",
      "Bash(cargo-audit:*)",
      "Bash(clippy:*)",
      "Bash(rustfmt:*)",
      "Bash(ruby:*)",
      "Bash(gem:*)",
      "Bash(bundle:*)",
      "Bash(rake:*)",
      "Bash(rubocop:*)",
      "Bash(rspec:*)",
      "Bash(java:*)",
      "Bash(javac:*)",
      "Bash(gradle:*)",
      "Bash(gcc:*)",
      "Bash(g++:*)",
      "Bash(clang:*)",
      "Bash(clang++:*)",
      "Bash(make:*)",
      "Bash(cmake:*)",
      "Bash(ninja:*)",
      "Bash(deno:*)",
      "Bash(bun:*)",
      "Bash(docker:*)",
      "Bash(osv-scanner:*)",
      "Bash(snyk:*)",
      "Bash(trivy:*)",
      "Bash(bandit:*)",
      "Bash(safety:*)",
      "Bash(semgrep:*)",
      "Bash(brew:*)",
      "Bash(jq:*)",
      "Bash(wget:*)",
      "mcp__*",
      "mcp__perplexity__perplexity_ask",
      "mcp__perplexity__perplexity_research",
      "mcp__perplexity__perplexity_reason",
      "mcp__perplexity__perplexity_search",
      "WebFetch(domain:docs.anthropic.com)",
      "WebSearch",
      "WebFetch"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /home)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)",
      "Bash(mv / *)",
      "Bash(chmod -R 000 /)",
      "Bash(chown -R root:root /)",
      "Bash(:{ :|: & };::*)",
      "Bash(> /dev/sda)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(passwd:*)",
      "Bash(chroot:*)",
      "Bash(kill -9 -1)",
      "Bash(killall:*)",
      "Bash(git push --force:*)",
      "Bash(git push --force-with-lease:*)",
      "Bash(git push --force-if-includes:*)",
      "Bash(git push -f:*)",
      "Bash(git push origin --delete:*)",
      "Bash(git push --delete:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)",
      "Bash(git branch -D:*)",
      "Bash(git tag -d:*)",
      "Bash(git rebase -i:*)",
      "Bash(git filter-branch:*)",
      "Bash(rm -rf :*)",
      "Bash(rm -r .:*)",
      "Bash(rm -rf .:*)",
      "Bash(chmod -R 000:*)",
      "Bash(find :* -delete::*)",
      "Bash(curl :* | sh::*)",
      "Bash(wget :* | sh::*)",
      "Bash(nc -l:*)",
      "Bash(netcat -l:*)"
    ],
    "defaultMode": "default"
  },
  "model": "opus",
  "enableAllProjectMcpServers": true,
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "date"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "code-refactoring@claude-code-workflows": true,
    "cicd-automation@claude-code-workflows": true,
    "backend-api-security@claude-code-workflows": true,
    "agent-orchestration@claude-code-workflows": true,
    "api-scaffolding@claude-code-workflows": true,
    "pr-review-toolkit@claude-code-plugins": true,
    "codebase-cleanup@claude-code-workflows": true,
    "superpowers@superpowers-marketplace": true,
    "codeguard-security@project-codeguard": true,
    "pyright-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "ralph-wiggum@claude-code-plugins": true,
    "my-lsp-servers@my-lsp-marketplace": true,
    "lsp-servers@claude-lsp-servers": true
  },
  "alwaysThinkingEnabled": false,
  "autoUpdatesChannel": "latest",
  "verbose": false
}
